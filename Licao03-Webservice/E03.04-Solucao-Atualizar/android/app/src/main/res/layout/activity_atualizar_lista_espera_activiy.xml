<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AtualizarListaEsperaActiviy">

    <!--TODO(1) Definir um TextView com o texto Nome da Reserva-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nome_da_reserva" />

    <!--TODO(2) Definir um EditText com o id e_nome_reserva-->
    <EditText
        android:id="@+id/e_nome_reserva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--TODO(3) Definir um TextView com o texto Total de Pessoas-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_de_pessoas" />

    <!--TODO(4) Definir um EditText com o id e_total_pessoas-->
    <EditText
        android:id="@+id/e_total_pessoas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!--TODO(5) Definir um Button-->
    <!--TODO(6) Colocar no texto do botão Atualizar-->
    <!--TODO(7) Colocar no onClick o valor onClickBtAtualizar. Criar o método correspondente na AtualizarListaEsperaActiviy-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickBtAtualizar"
        android:text="@string/atualizar" />

</LinearLayout>